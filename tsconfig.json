{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // Define a pasta base como "src"
    "strict": true,
    "paths": {
      "@app": ["app"],
      "@use-cases/*": ["use-cases/*"],
      "@repositories/*": ["repositories/*"],
      "@entities/*": ["entities/*"],
      "@utils/*": ["utils/*"],
      "@http/*": ["http/*"],
      "@database/*": ["database/*"] 
    }


  },
  "include": ["src/**/*"],
  "exclude": ["tests", "node_modules", "dist"]
}

